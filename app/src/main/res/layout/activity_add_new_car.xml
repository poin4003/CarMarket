<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    tools:context=".AddNewCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ADD NEW CAR"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:layout_marginTop="50sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etCarModels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input car models"/>
        <EditText
            android:id="@+id/etCarCompanies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input car companies"/>
        <EditText
            android:id="@+id/etCarDescriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input car Description"/>
        <EditText
            android:id="@+id/etCarPrices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input car prices"/>

        <ImageView
            android:id="@+id/ivCarImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:text="Select Image"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btnAddCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="Add car"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFC107"
            android:text="Cancel"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>
